{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/health",
            "dest": "server.js"
        }
    ],
    "includeFiles": [
        "data/legal_cases.db"
    ],
    "env": {
        "NODE_ENV": "production"
    }
}